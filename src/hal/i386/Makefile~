ROOT = ../../..

CC	= i586-elf-gcc
CFLAGS	= -O -fno-asynchronous-unwind-tables -fstrength-reduce -fomit-frame-pointer -finline-functions -nostdinc -fno-builtin -I$(ROOT)/include -L$(ROOT)/lib
LD	= i586-elf-ld

OBJFILES = cpuid.o exception.o fpu.o gdt.o ioapic.o idt.o irq.o isrs.o lapic.o main.o msr.o pic.o pit.o pmm.o ports.o syscall.o timer.o vmm.o
 
.c.o:
	$(CC) $(CFLAGS) -o $(ROOT)/build-i386/hal/i386/$@ -c $<
	
all: $(OBJFILES)
	cd asm; make