ROOT = ../../..

CC	?= arm-none-eabi
CFLAGS	= -O -fno-asynchronous-unwind-tables -fstrength-reduce -fomit-frame-pointer -finline-functions -Wall -O6 -nostdinc -ffreestanding -nostartfiles -nodefaultlibs -I$(ROOT)/include -L$(ROOT)/lib

OBJFILES = initsys.o interrupts.o led.o mailbox.o main.o memory.o memutils.o textutils.o ports.o timer.o

.s.o:
	$(CC)-gcc -mcpu=arm1176jzf-s -o $(ROOT)/build-raspi/hal/raspi/$@ $<
 
.c.o:
	$(CC)-gcc -marm -mcpu=arm1176jzf-s $(CFLAGS) -o $(ROOT)/build-raspi/hal/raspi/$@ -c $<
	
all: $(OBJFILES)
	cd asm; make CC=$(CC)
